#include<stdio.h>
int main()
{
   int i,j,k,rows;
   printf("\n enter the number of rows: ");
   scanf("%d",&rows);
   
   for(i=1;i<=rows;i++)
   {
     for(j=1;j<=rows-i;j++)
     {
       printf(" ");
     }
     for(k=0;k!=2*i-1;k++)
     {
       if(count<=rows-i)
       {
         printf("%d",i+k);
         ++count;
       }
       else
       {
         ++count1;
	 printf("%d",(i+k-2*count1));
       }
     }

     count1=count=k=0;
     printf("\n");
   }   
}
