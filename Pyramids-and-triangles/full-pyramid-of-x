#include<stdio.h>
int main()
{
    int i,j,rowws;
    printf("\n enter the number of rows to be printed: ");
    scanf("%d",&rows);

    for(i=1;i<=rows;i++)
    {
      for(j=1;j<=rows-i;j++)
      {
        printf(" ");
      }
      
      for(k=0;k<=2*i-1;k++)
      {
        printf("* ");
      }
      printf("\n");
    }
}
    
