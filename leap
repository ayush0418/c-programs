#include<stdio.h>
void leapyear(int y)
{
  int i=0;
  if (y%4==0)         //leap year comes in every 4 year
  {
     printf("\n %d is a leap year",y);
     else
     printf("\n %d is not a leap year",y);
  }
}

void main()
{
  int y;
  printf("\n enter the year =");
  scanf("%d",&y);
  leapyear(y);                   //function called
  return 0;
}
