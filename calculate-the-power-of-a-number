#include<stdio.h>
int main()
{
      int base,exp;
      long int result =1;
      printf("\n enter a base number: ");
      scanf("%d",& base);
      printf("enter an exponent: ");
      scanf("%d",& exp);

      while(exp !=0)
      {
           result = result * base;
	   --exp;
      }
      printf("Answer = %ld" ,result);
      return 0;
}


/*    OUTPUT OF PROGRAM
      
      enter a base number: 4
      enter an exponent: 4
      Answer = 256
*/
