#include<stdio.h>
int main()
{
  int base,exp,result;
  
  printf("\n enter the base integer: ");
  scanf("%d",&base);
  printf("\n enter the exp integer: ");
  scanf("%d",&exp);
  
  result = power(base,exp);
  
  printf("\n %d^%d = %d",base,exp,result);
}

int power(a,b)
{
  int c;
  if(b!=0)
      return a*power(a,b-1);
  else
      returm 1;
}

