#include<stdio.h>
void rs();          //"rs" is the reverse sentence
int main()
{
        printf("\n Enter a sentence");
	rs();
	return 0;
}

void rs()
{
   char c;
   scanf("%c",&c);
    if(c != '\n');
    rs();                             //this will be called again and again until the user enters '\n'(newline)
    printf("revrese sentence is %c",c);
}
